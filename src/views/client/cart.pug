extends ../layouts/client/layout_client

block title 
  title Dreamie Gear - Cart

block append style
  link(rel='stylesheet', href='/assets/css/custom.min.css')

block content
  article
    section.breadcrumb
      .container
        nav(aria-label='breadcrumb')
          ol.breadcrumb
            li.breadcrumb-item
              a(href='/demo/home') Trang chủ
            li.breadcrumb-item.active(aria-current='page') Giỏ hàng

    section.cart-page
      .container
        .row
          .col-lg-9
            .cart-page-product
              .table-responsive
                table.table.table-dark.table-bordered
                  thead
                    tr
                      th(scope='col') Sản phẩm
                      th(scope='col') Giá
                      th(scope='col') Số lượng
                      th(scope='col') Thành tiền
                  tbody
                    tr
                      td.cart-page-product-1
                        img(src='/assets/img/product-1.png', alt='')
                        h5
                          a(href='/demo/product_detail') Logitech G502 Proteus Spectrum
                        .cart-remove
                          a(title='Xóa sản phẩm', href='#')
                            i.fa.fa-times(aria-hidden='true')
                      td
                        h4 1.699.000 đ
                      td.cart-page-product-2
                        a(href='#')
                          i.fa.fa-minus(aria-hidden='true')
                        input(type='number', value='1')
                        a(href='#')
                          i.fa.fa-plus(aria-hidden='true')
                      td.cart-page-product-3
                        h4 1.699.000 đ
