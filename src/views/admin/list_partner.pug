extends ../layouts/admin/layout_admin

block title 
  title Danh sách Đối tác

block append style
  link(rel='stylesheet', href='/assets/css/partner_admin.min.css')
  script(src='/bower_components/moment/min/moment.min.js')
  

block content

  a.btn.btn-success.mb-3(href="/admin/partner/custom-partner/") Thêm mới
  .table-responsive
    table.table.table-dark.table-bordered.table-hover
      thead
        tr
          th(scope='col') STT
          th(scope='col') Tên đối tác
          th(scope='col') Ảnh đối tác
          th(scope='col') Ngày tạo
          th(scope='col') Ngày sửa
          th(scope='col') Hành động
      tbody
        each partner in partners
          tr
            th(scope='row')=partner.id
            td=partner.name
            td
              a(title='Phóng to hình', rel='gallery', href=partner.image, data-fancybox='', data-caption=partner.name)
                img(src=partner.image)
            td=partner.createdAt
            td=partner.updatedAt
            td
              a.btn.btn-info.mr-2(href="/admin/partner/custom-partner/" + partner._id) Xem
              a.btn.btn-danger(href="/admin/partner/delete/" + partner._id) Xóa


